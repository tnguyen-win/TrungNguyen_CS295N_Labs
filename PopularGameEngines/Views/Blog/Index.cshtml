@model Message
@{
    ViewData["Title"] = "CS295N - Blog - Homepage";
}

<div class="mt-sm-5">
    <h1 class="display-4 fw-bold mb-5">@ViewData["Title"]</h1>

    @if (@Model != null) {
        <div class="row row-cols-1 row-cols-lg-3 g-4 mb-5">
            <div class="col">
                <div class="card">
                    <div class="d-flex card-body">
                        <div class="w-100">
                            <h1 class="card-title fw-bold">@Model.Title</h1>
                            <p class="card-text me-auto">@Model.Text</p>
                        </div>
                    </div>
                    <div class="d-flex flex-column card-footer text-body-secondary">
                        <small class="me-auto"><strong>Created by:</strong> @Model.From.Name</small>
                        <small><strong>Last updated:</strong> @Model.Date</small>
                        <small><strong>Post rating:</strong> @Model.Rating</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <a class="btn btn-info text-dark link-dark fw-bold" href="/blog/post">Create post</a>
</div>
