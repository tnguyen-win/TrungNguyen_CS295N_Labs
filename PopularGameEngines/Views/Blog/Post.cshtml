@model Message
@{
    ViewData["Title"] = "CS295N - Blog - Post";
}

<div class="mt-sm-5">
    <h1 class="display-4 fw-bold mb-5">@ViewData["Title"]</h1>
    <form method="Post">
        @* Title *@
        <label for="title">Title:</label>
        <input id="title" name="Title"><br>
        @* Text *@
        <label for="text">Text:</label>
        <input id="text" name="Text"><br>
        @* Author *@
        <label for="author">Author:</label>
        <input id="author" name="From.Name"><br>
        @* Submit *@
        <input class="btn btn-info text-dark link-dark fw-bold" type="submit" value="Submit post">
    </form>
</div>
